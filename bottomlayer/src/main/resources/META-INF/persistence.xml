<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
 
	<persistence-unit name="com.wide.jpa" transaction-type="RESOURCE_LOCAL">
	
		<non-jta-data-source>java:comp/env/jdbc/WideWebApp</non-jta-data-source>
 
		<!-- Classes -->
		<class>com.wide.domainmodel.Exercise</class>
 
		<properties>
 
			<property name="hibernate.connection.datasource" value="java:comp/env/jdbc/WideWebApp"/>
			<property name="hibernate.id.new_generator_mappings" value ="true"/>
 
			<property name="hibernate.archive.autodetection" value="class"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
			<property name="hibernate.hbm2ddl.auto" value="create"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
			<property name="connection.autocommit" value="false"/>
 
		</properties>
	</persistence-unit>
</persistence>